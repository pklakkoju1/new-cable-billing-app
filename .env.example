cp .env.example .env

# =============================================================================
# GGB Broadband Services - Environment Configuration Template
# =============================================================================

# Database Settings
DB_NAME=ggb_cable_network
DB_USER=ggb_admin
DB_PASSWORD=CHANGE_THIS_PASSWORD

# Application Settings
APP_NAME=GGB Broadband Services
APP_ENV=production
APP_DEBUG=false

# Security Settings
JWT_SECRET=CHANGE_THIS_JWT_SECRET
MAX_LOGIN_ATTEMPTS=5
SESSION_TIMEOUT=3600

# Email Configuration (Optional)
MAIL_ENABLED=false
MAIL_HOST=smtp.gmail.com
MAIL_USERNAME=your-email@domain.com
MAIL_PASSWORD=your-email-password

# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=3600
BACKUP_RETENTION_DAYS=30

# Company Information
COMPANY_NAME=GGB Broadband Services
COMPANY_PHONE=+91-XXXX-XXXXXX
COMPANY_EMAIL=info@ggbbroadband.com
